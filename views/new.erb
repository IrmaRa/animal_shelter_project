<form method="post" action="/animals">
  <label for="name-field">Name:</label> 
  <input
  type="text"
  name="name"
  id="name-field"
  />

  <label for="image-url-field">Image Url:</label>
  <input 
  type="text" 
  name="image_url" 
  id="image-url-field"
  />

  <label for="breed-field">Breed:</label>
  <input 
  type="text" 
  name="breed" 
  id="breed-field"
  />

  <label for="age-field">Age:</label>
  <input 
  type="number" 
  name="age" 
  id="age-field"
  />

  <label for="sex-selection">Select sex:</label>
  <select name="sex" id="sex-selection">
    <option value="Male">Male</option>
    <option value="Female">Female</option>
  </select>

<input type="submit" value="Add animal">
</form>