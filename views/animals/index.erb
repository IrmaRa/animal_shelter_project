<h1 class="page-title">All Animals of Edinburgh Sanctuary</h1>

<nav>
  <ul id="search-block">
    <form method="get" action="/animals/type" />
    <li><label for="search-field">Search by type:</label></li>
    <li><select name="type" id="type-selection">
      <option value="Dog">Dog</option>
      <option value="Cat">Cat</option>
    </select></li>
    <li><input type="submit" value="Search"></li>
  </ul>
</form>
</nav>

<div> <% @animals.each do |animal| %>
 <div class="animal-with-image">
   <h3 id="animal-name"><%= animal.name.capitalize %></h3>
   <img src="<%= animal.image_url %>"  />
   <p>Admission Date: <%= animal.admission_date %> </p> 
   <p><a id="more-details" href="/animals/<%= animal.id %>">More details</a></p>
 </div>


 <% end %>

</div>