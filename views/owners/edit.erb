<h2>Change owner details</h2>

<div>
  <ul class="add-new">
    <form method="post" action="/owners/<%= @owner.id %>">

      <li><label for="name-field">Name:</label> 
        <input
        type="text"
        name="name"
        id="name-field"
        value="<%= @owner.name %>"
        /></li>

        <li><label for="preferences-field">Animal preferences:</label> 
          <input
          type="text"
          name="preferences"
          id="preferences-field"
          value="<%= @owner.preferences %>"
          /></li>

          <li><input type="submit" value="Update"></li>
        </form>

      </ul>
    </div>